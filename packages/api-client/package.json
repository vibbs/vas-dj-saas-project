{
  "name": "@vas-dj-saas/api-client",
  "version": "1.0.0",
  "description": "Type-safe API client for VAS-DJ SaaS platform (v1 API)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./axios": {
      "types": "./dist/axios.d.ts",
      "import": "./dist/axios.mjs",
      "require": "./dist/axios.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "codegen": "orval --config orval.config.ts",
    "codegen:check": "pnpm codegen && git diff --exit-code src/generated/",
    "size": "size-limit",
    "smoke:node": "node smoke-tests/node-smoke.cjs",
    "smoke": "pnpm smoke:node",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "size-limit": [
    {
      "name": "Core (fetch client)",
      "path": "dist/index.mjs",
      "limit": "20 KB",
      "gzip": true
    },
    {
      "name": "Axios client",
      "path": "dist/axios.mjs",
      "limit": "8 KB",
      "gzip": true
    }
  ],
  "dependencies": {
    "zod": "^4.0.16"
  },
  "peerDependencies": {
    "axios": "^1.6.0"
  },
  "peerDependenciesMeta": {
    "axios": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.25.0",
    "orval": "^7.3.0",
    "size-limit": "^11.2.0",
    "tsup": "^8.0.0",
    "typescript": "~5.8.3"
  }
}
