{
  "name": "vas-dj-saas-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "prepare": "husky",
    "e2e": "pnpm --filter @vas-dj-saas/web exec playwright test",
    "e2e:ui": "pnpm --filter @vas-dj-saas/web exec playwright test --ui"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "@playwright/test": "^1.48.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{js,jsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "react-native": "0.79.5"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tanstack/react-query": "^5.84.2",
    "@tanstack/react-query-devtools": "^5.84.2",
    "react-hook-form": "^7.62.0",
    "zod": "^4.0.16",
    "zustand": "^5.0.7"
  }
}
